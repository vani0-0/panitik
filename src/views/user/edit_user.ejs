<div class="content-body">
  <div class="center">
    <div class="card-container">
      <h1 style="margin-bottom: 2rem">Edit User</h1>
      <form
        class="create-form"
        id="userForm"
        action='/api/user/edit/<%= user._id %>'
        method="POST"
      >
        <%- include('./_form_fields') %>
        <div class="card-footer">
          <a href="/user" class="delete-button">Cancel</a>
          <button
            type="submit"
            class="submit-button"
            id="submitButton"
          >
            Edit
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
